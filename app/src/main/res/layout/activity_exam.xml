<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exam">
    <TextView
        android:id="@+id/textView1"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintWidth_percent="1"
        android:background="#fdeedc"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        android:text="性格测试" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.55"
            app:layout_constraintWidth_percent="0.86"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.29"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/question"
                    android:background="@drawable/question"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:text="2.当我参加一个社交聚会时，我一般是这样的状态："
                    android:textSize="24sp"
                    android:textStyle="bold"
                    />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/AnswerA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/answer"
                        android:layout_weight="1"
                        android:layout_marginTop="40dp"
                        android:text="Answer A"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <RadioButton
                        android:id="@+id/AnswerB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/answer"
                        android:layout_marginTop="50dp"
                        android:layout_weight="1"
                        android:text="Answer B"
                        android:textSize="18sp"
                        android:textStyle="normal"/>
                </RadioGroup>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintWidth_percent="0.86"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_weight="7"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/last1"
                android:text="上一题"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:layout_weight="5"
                android:id="@+id/btn_previous"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/next1"
                android:text="下一题"
                android:textStyle="normal"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:layout_weight="2"
                android:layout_marginLeft="30dp"
                android:id="@+id/btn_next"
                />
        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>